---
import '../styles/header.css';

const navLinks = [
  { name: 'Galer√≠a', href: '#galeria' },
  { name: 'Servicios', href: '#servicios' },
  { name: 'Testimonios', href: '#testimonios' },
  { name: 'Contacto', href: '#contacto' },
];
---

<header class="fixed w-full bg-black bg-opacity-90 z-50">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href="#" class="text-2xl font-bold text-purple-500">DJ <span class="text-white">Coca</span></a>
    
    <div class="hidden md:flex space-x-8">
      {navLinks.map((link) => (
        <a href={link.href} class="text-white hover:text-purple-400 " data-astro-transition="animate">{link.name}</a>
      ))}
    </div>
    
    <button class="md:hidden text-white">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>
</header> 